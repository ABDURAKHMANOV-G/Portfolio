<Window x:Class="wpfWIFIScanner.Graphics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="WiFi Signal Monitoring" Height="300" Width="500">
    <Window.Resources>
        <!-- Стиль для OxyPlot -->
        <Style x:Key="CoolPlotStyle" TargetType="oxy:PlotView">
            <Setter Property="Background" Value="LightGray" />
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Контейнер для графика -->
        <oxy:PlotView Name="plotView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Style="{StaticResource CoolPlotStyle}"/>
    </Grid>
</Window>

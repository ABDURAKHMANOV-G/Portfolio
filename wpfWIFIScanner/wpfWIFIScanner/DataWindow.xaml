<Window x:Class="wpfWIFIScanner.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="База Данных" HorizontalAlignment="Center" Height="400" Width="600">
    <Grid>
        <!-- Оборачиваем TextBlock в ScrollViewer для добавления прокрутки -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="TextBlock_Data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="760" Height="300" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
